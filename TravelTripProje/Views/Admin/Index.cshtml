@using TravelTripProje.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>

    @foreach (var x in Model)
    {
<tr>
    <td>@x.Id</td>
    <td>@x.Baslik</td>
    <td><a href="/Admin/BlogSil/@x.Id" class="btn btn-danger">SİL</a></td>
    <td><a href="/Admin/BlogGetir/@x.Id" class="btn btn-warning">GÜNCELLE</a></td>
    <td><a href="/Blog/BlogDetay/@x.Id" class="btn btn-default">DETAYLAR</a></td>
</tr>
            }
        
    </table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">YENİ BLOG</a>
